{
    "name": "C# and Python Development Container",
    "image": "mcr.microsoft.com/devcontainers/dotnet:8.0",
    "features": {
        "ghcr.io/devcontainers/features/python:1": {
            "version": "3.11"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-dotnettools.csharp",
                "ms-dotnettools.csdevkit",
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-python.flake8",
                "ms-azuretools.vscode-docker",
                "ms-azuretools.vscode-cosmosdb",
                "esbenp.prettier-vscode"
            ]
        }
    },
    //"postCreateCommand": "python3 -m venv .venv && source .venv/bin/activate && pip3 install -r src/app/requirements.txt",
    "remoteUser": "vscode"
}